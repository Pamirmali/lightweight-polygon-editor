{
  "name": "lightweight-polygon-editor",
  "version": "1.0.0",
  "description": "Poly Studio - A lightweight 2D shape editor",
  "scripts": {
    "start": "parcel ./src/index.html",
    "serve": "node server.js",
    "build": "parcel build ./src/index.html --public-url ./ --no-source-maps",
    "build:dev": "parcel build ./src/index.html",
    "lint": "eslint src/**/*.js",
    "clean": "rm -rf dist .parcel-cache",
    "prebuild": "npm run clean"
  },
  "devDependencies": {
    "@parcel/transformer-inline-string": "^2.12.0",
    "parcel": "^2.12.0",
    "eslint": "^8.57.0"
  },
  "keywords": ["polygon", "editor", "canvas", "2d", "shapes", "javascript"],
  "homepage": "https://pamirmali.github.io/lightweight-polygon-editor/",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pamirmali/lightweight-polygon-editor.git"
  },
  "license": "MIT",
  "browserslist": [
    "defaults",
    "not IE 11"
  ]
}
